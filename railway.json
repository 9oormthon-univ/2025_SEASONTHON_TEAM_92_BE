{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "./gradlew build -x test --no-daemon --parallel --build-cache --configuration-cache"
  },
  "deploy": {
    "startCommand": "java -jar build/libs/SeasonToneBackend.jar",
    "healthcheckPath": "/actuator/health",
    "healthcheckTimeout": 300,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}